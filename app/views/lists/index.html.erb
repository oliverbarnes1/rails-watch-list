<h1><strong>Welcome to the Worlds best movie watchlist app</strong></h1>
<h2>Pick a List:</h2>
<div class="cards">
  <% @lists.each do |list| %>
  <% if list.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, width: 400, crop: :fill %>)">
      <p class="list-name"><%= link_to list.name, list_path(list) %></p>
    </div>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/lunch.jpg)">
      <p class="list-name"><%= link_to list.name, list_path(list) %></p>
      </div>
    <% end %>
  <% end %>
</div>
  <h3 class="btn btn-primary btn-lg"><%= link_to "Create a List", new_list_path %></h3>
